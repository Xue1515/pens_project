<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1606777568731-eb487a8ba17b?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80)">
  show pens
</div>

<div class="container">
  <div class="card-product">
  <% if @pen.photo.attached? %>
    <%= cl_image_tag @pen.photo.key, height: 150, width: 250, crop: :fill %>
  <% end %>
    <div class="card-product-infos">
      <h1><%= @pen.title %></h1>
      <h2><%= @pen.description %></h2>
      <h4><%= @pen.category %></h4>
      <h6><%= @pen.price %>$</h6>
      <%= link_to "delete pen", pen_path(@pen), method: :delete, class: 'btn btn-secondary boton-delete'%>
    </div>
  </div>
</div>

<div class="container form" style="margin: 0 auto;">
    <h2>Booking a Pen</h2>

  <%= simple_form_for :search, method: "get" do |f| %>
    <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.button :submit, "Go", class: "btn btn-secondary" %>
  <% end %>
</div>
